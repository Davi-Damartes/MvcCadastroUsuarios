@model RedefinirSenhaModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Redefinir Senha";
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-secondary btn-sm close-alert" data-bs-dismiss="alert"
            aria-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>

}
<h2>Enviaremos uma opção de renovação de senha para o seu e-mail!</h2>


<form asp-controller="Login" asp-action="EnviarLinkParaRedefinirSenha" method="post">
    <div class="mb-3">
        <label for="Login" class="form-label">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(model => model.Login)
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">E-mail Cadastrado</label>
        <input type="text" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <button type="submit" class="btn btn-primary btn-block w-100 mb-2">Redefinir Senha</button>
    <a class="btn btn-secondary btn-block btn-block w-100" asp-action="Index" asp-controller="Login"
        role="button">Voltar</a>

</form>
