@model UsuarioModel
@{
    ViewData["Title"] = "Adicionar usuario";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar novo Usuario</h1>
</div>

<form asp-controller="Usuario" asp-action="Criar" method="post">

    <div class="mb-4">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do Usuario">
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="mb-4">
        <label for="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail de Usuário">
           @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="mb-4">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite o e-mail de Usuário">
           @Html.ValidationMessageFor(x => x.Login)
    </div>

    <div class="mb-4">
        <label for="senha">Pefil</label>
        <select asp-for="Perfil"  class="form-control">
            <option value="" >Selecione </option>
            <option value="@MvcCadastro.Enums.PerfilEnum.Administrador" >Administrador </option>
            <option value="@MvcCadastro.Enums.PerfilEnum.UsuarioPadrao" >Padrão </option>
            
        </select>
         @Html.ValidationMessageFor(model => model.Perfil)
    </div>

        <div class="mb-4">
        <label for="senha" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Digite a senha do Usuário">
        @Html.ValidationMessageFor(x => x.Senha)
    </div>

    <button type="submit" class="btn btn-primary btn-lg">Adicionar</button>
    <a class="btn btn-secondary btn-lg " asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>

</form>
