@model UsuarioModel

@{
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between custom-navbar w-100%">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Olá, @Model.Nome</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <ul class="navbar-nav flex-grow-1 ml-auto justify-content-start">
            <li class="nav-item">
                <button class="button butoes-Menu" style="color: white">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Principal</a>
                </button>
            </li>

            @if (Model.Perfil == MvcCadastro.Enums.PerfilEnum.Administrador)
            {
                <li class="nav-item">
                    <button class="button butoes-Menu" style="color: white">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Contato" asp-action="Index">Contatos</a>
                    </button>
                </li>
                <li class="nav-item">
                    <button class="button butoes-Menu" style="color: white">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                    </button>
                </li>
            }
        </ul>
        <ul class="navbar-nav flex-grow-1 ml-auto justify-content-start">
            <li class="nav-item">
                <button class="button butoes-Menu" style="color: white">
                    <a class="nav-link text-dark" asp-area="" asp-controller="AlterarSenha" asp-action="Index">Alterar Senha</a>
                </button>
            </li>

            <li class="nav-item">
                <button class="button butoes-Menu" style="color: white">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Sair"><b>Sair</b></a>
                </button>
            </li>

        </ul>
    </div>
}